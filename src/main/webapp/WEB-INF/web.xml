<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:META-INF/*-context.xml</param-value><!-- 끝은 타일즈 -->
	</context-param>
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet><!-- 키 -->
		<servlet-name>appServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:META-INF/*-context.xml</param-value><!-- 서블릿실행 갔다왔으니 또 갈필요없어 -->
		</init-param>
		<load-on-startup>1</load-on-startup><!-- 1순위로 작동  키&밸류-->
	</servlet>
		
	<servlet-mapping><!-- 밸류 -->
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/</url-pattern> <!-- 홈컨트롤러로 이동 @requestmapping("/") -->
	</servlet-mapping>
	 <servlet-mapping>
    	<servlet-name>default</servlet-name>
    	<url-pattern>/resources/*</url-pattern>
  	</servlet-mapping>
	 <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <error-page>
  		<error-code>404</error-code>
  		<location>/WEB-INF/views/error/error404.jsp</location>
  </error-page>
</web-app>